---
interface Props {
  id?: string;
  class?: string;
  background?: 'default' | 'alt' | 'darker';
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const { 
  id, 
  class: className, 
  background = 'default',
  padding = 'lg'
} = Astro.props;

const backgrounds = {
  default: "bg-dark-900",
  alt: "bg-dark-950",
  darker: "bg-black",
};

const paddings = {
  none: "",
  sm: "py-12",
  md: "py-20",
  lg: "py-28",
};

const classes = [
  backgrounds[background],
  paddings[padding],
  className
].join(" ");
---

<section id={id} class={classes}>
  <div class="container mx-auto px-6">
    <slot />
  </div>
</section>
